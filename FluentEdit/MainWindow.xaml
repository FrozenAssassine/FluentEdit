<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FluentEdit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentEdit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:views="using:FluentEdit.Views"
    mc:Ignorable="d">

    <Grid Loaded="Grid_Loaded" Background="Transparent" >
        <Grid Background="Transparent" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Background="Transparent" x:Name="titleBarGrid" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                    <ColumnDefinition/>
                    <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Assets/StoreLogo.png" 
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   Width="16" Height="16"
                   Margin="8,0,0,0"/>
                <TextBlock x:Name="titleDisplay"
                       Text="" 
                       Style="{StaticResource CaptionTextBlockStyle}" 
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="28,0,0,0"/>
            </Grid>
            <Button Grid.Row="0" Grid.Column="0" x:Name="navigateBackButton" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top" Click="NavigateBack_Click">
                <SymbolIcon Symbol="Back"/>
            </Button>
        </Grid>
        <Frame x:Name="mainFrame" Margin="0,30,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <StackPanel Margin="20,40,20,20" MinWidth="300" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" x:Name="infoMessagesPanel"/>
    </Grid>
</Window>
